
@{
    ViewBag.Title = "UpdatePwdAdmin";
    Layout = "~/Views/Shared/_LayoutAdminGCHome.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<style>
    label.error {
        color: red;
    }
</style>
<div style="width:50%;height:auto;margin:70px auto">
    <form class="form-horizontal" role="form" action="/Admin/UpdatePwdAdmin" id="AddValidate" method="post">
        <div class="form-group">
            <label for="OldPwd" class="col-sm-2 control-label">旧密码</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" name="OldPwd" placeholder="请输入旧密码">
            </div>
        </div>
        <div class="form-group">
            <label for="NewPwd" class="col-sm-2 control-label">新密码</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" name="NewPwd" placeholder="请输入新密码" id="NewPwd">
            </div>
        </div>
        <div class="form-group">
            <label for="NewPwd1" class="col-sm-2 control-label">再输入密码</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" name="NewPwd1" placeholder="请再次输入密码">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-10">
                <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $("#AddValidate").validate({
        rules: {
            OldPwd: { required: true },
            NewPwd: { required: true },
            NewPwd1: { required: true, equalTo: "#NewPwd" }
        },
        messages: {
            OldPwd: { required: "旧密码必填" },
            NewPwd: { required: "新密码必填" },
            NewPwd1: { required: "二次密码必填", equalTo: "两次密码不一致" }
        }
    })
</script>

