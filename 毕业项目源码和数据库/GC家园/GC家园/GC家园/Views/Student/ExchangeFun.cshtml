
@{
    ViewBag.Title = "ExchangeFun";
    Layout = "~/Views/Shared/_LayoutGCHome.cshtml";
}

<button  class="btn bg-primary col-lg-1" style="margin-left:60px" onclick="change()">寝室调换</button>
<div style="width:90%;margin:10px auto" id="first">
    <div class="">
        <div class="form-inline  col-lg-9">
            <input type="text" placeholder="请输入学号" class="form-control  col-lg-offset-4" style="width:250px" />
            <a href="" class="btn btn-info">查询</a>
        </div>
    </div>
    <table class="table table-bordered table-striped" style="transform:translateY(20px)">
        <thead>
            <tr>
                <th>学号</th>
                <th>姓名</th>
                <th>原楼宇</th>
                <th>现楼宇</th>
                <th>原宿舍</th>
                <th>现宿舍</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div style="width:50%;height:auto;margin:70px auto" id="second" class="hidden">
    <form class="form-horizontal" role="form" action="">
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">学号</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="StuNumber" name="StuNumber" placeholder="请输入学号" onblur="lose()" />
                <p style="color:red" id="fill"></p>
            </div>
        </div>

        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">原楼宇</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="OldFloorID" id="OldFloorID"/>
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-sm-2 control-label">原宿舍</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="OldDormID" id="OldDormID"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-10">
                <button type="submit" class="btn btn-default">提交</button>
            </div>
        </div>
    </form>
</div>

@section scripts{
    <script>
        function change() {
            if ($("#first").is(":visible")) {
                $("#first").addClass("hidden");
                $("#second").addClass("show").removeClass("hidden");
                return;
            }
            if ($("#first").is(":hidden")) {
                $("#first").addClass("show").removeClass("hidden");
                $("#second").addClass("hidden").removeClass("show");

            }
        }

        function lose() {
            var StuNumber = $("#StuNumber").val();
            $.ajax({
                type: "post",
                url: "/Student/ajaxOrnotStuNumber",
                data: { "StuNumber": StuNumber },
                async:false,
                success: function (data) {
                    if (data == 0) {
                        $("#fill").html("没有该学生!请重新输入");
                        $("#StuNumber").val("");
                    }
                    else {
                        $("#fill").html("");
                        $.ajax({
                            type: "post",
                            url: "/Student/ajaxFloorAndDorm",
                            data: { "StuNumber": StuNumber },
                            dataType: "Json",
                            async:false,
                            success: function (data) {
                                console.log(data);
                                var msg = jQuery.parseJSON(data);
                                $("#OldFloorID").val(msg.Floor.FloorName);
                                $("#OldDormID").val(msg.Dorm.DormName);
                            }
                        })
                    }
                }
            })
        }
    </script>
}

